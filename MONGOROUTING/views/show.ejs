<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/style.css" />
    <title>Getting Chats from DB</title>
  </head>
  <body>
    <h1 class="chat-show-header">Chats</h1>
    <% for( chat of chatData ) { %>
    <div class="show-chat-page bg-info">
      <p class="chat-from">From : <%= chat.from %></p>
      <p class="chat-message bg-danger text-light">
        Message : <%= chat.message %>
      </p>
      <p class="chat-date">Recieved by : <%= chat.to %></p>
      <hr />
      <p><%= chat.created_at.toString().split(" ")[4] %></p>
      <p><%= chat.created_at.toString().split(" ").slice(0,4).join("-") %></p>
      <form action="/chats/<%= chat._id %>/edit" method="get">
        <button class="edit-form btn btn-primary">Edit Message</button>
      </form>
      <form action="/chats/<%= chat._id %>?_method=DELETE" method="post">
        <button class="delete-chat btn btn-primary">Delete Chat</button>
      </form>
      <form action="/chats/<%= chat._id %>" method="get">
        <button class="delete-chat btn btn-primary">Show Chat</button>
      </form>
    </div>

    <% } %>
    <form action="/" method="get">
      <button class="home-redirect btn btn-info">Home Page</button>
    </form>
  </body>
</html>
